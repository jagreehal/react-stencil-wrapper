{
  "name": "react-stencil-wrapper",
  "version": "0.0.7",
  "bugs": {
    "url": "https://github.com/jagreehal/react-stencil-wrapper/issues"
  },
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.m.js",
  "source": "src/index.ts",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "jagreehal <jag.reehal@gmail.com>",
  "homepage": "https://github.com/jagreehal/react-stencil-wrapper/tree/master/packages/react-stencil-wrapper#readme",
  "description": "React Stencil Wrapper",
  "scripts": {
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "build": "microbundle",
    "start": "microbundle watch",
    "test": "jest --no-cache",
    "test:watch": "jest --watch --no-cache"
  },
  "dependencies": {
    "react": "^16.4.0"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/node": "^10.3.0",
    "@types/prettier": "^1.12.4",
    "@types/react": "^16.3.16",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "microbundle": "^0.4.4",
    "prettier": "^1.13.4",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules/",
      "dist",
      "**/*.spec.(ts|tsx)"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jagreehal/react-stencil-wrapper.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  }
}
