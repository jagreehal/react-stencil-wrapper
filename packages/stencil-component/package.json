{
  "name": "@jagreehal/stencil-component",
  "private": true,
  "version": "0.0.1",
  "description": "Stencil component",
  "main": "dist/stencil-app.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": ["dist/"],
  "scripts": {
    "build": "stencil build --stats --prerender",
    "dev": "sd concurrent \"stencil build --dev --watch\"",
    "lint": "sd concurrent \"npm run lint:ts\" \"npm run lint:styles\"",
    "lint:styles": "stylelint \"src/**/*.css\"",
    "lint:ts": "tslint -p tsconfig.json -c tslint.json",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test:watch": "jest --watch --no-cache"
  },
  "author": "Jag Reehal",
  "license": "ISC",
  "dependencies": {
    "@stencil/core": "0.7.26"
  },
  "devDependencies": {
    "@stencil/utils": "^0.0.4",
    "@types/jest": "^22.2.2",
    "husky": "^0.15.0-rc.9",
    "jest": "^22.4.3",
    "prettier": "^1.11.1",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "5.8.0",
    "tslint-config-prettier": "^1.10.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$":
        "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "json", "jsx"]
  }
}
